  <div class="pt-8 max-w-xl mx-auto lg:pt-0 lg:w-3/5 ">
    <%= simple_form_for @contact do |f| %>
      <div class="space-y-6">

          <%= f.input :name,
                      required: false,
                      autofocus: true,
                      label: "Nom",
                      label_html: { class:"text-base text-gray-800" },
                      placeholder: 'Patrick',
                      input_html: { class: "mt-2 py-2 px-2 text-sm text-gray-600 w-full border-2 border-gray-200 rounded-lg focus:outline-none focus:border-japonica-300"} %>

          <%= f.input :email,
                      required: false,
                      label: "Email",
                      label_html: { class:"text-base text-gray-800" },
                      placeholder: "patricycles@gmail.com",
                      input_html: { class: "mt-2 py-2 px-2 text-sm text-gray-600 w-full border-2 border-gray-200 rounded-lg focus:outline-none focus:border-japonica-300"} %>
          <div class="pt-3">

            <%= f.input :message,
                        required: false,
                        label: "Message",
                        label_html: { class:"text-base text-gray-800" },
                        placeholder: "Ecrivez votre message ici...",
                        input_html: { class: "mt-2 pt-2 pb-32 px-2 text-sm text-gray-600 w-full border-2 border-gray-200 rounded-lg focus:outline-none focus:border-japonica-300"} %>
          </div>

          <%= f.input :accept,
                      as: :boolean,
                      checked_value: true,
                      unchecked_value: false,
                      label: "En envoyant ce message, vous acceptez nos conditions d'utilisation et de respect de la vie privée",
                      label_html: { class: "text-sm text-gray-500 italic" },
                      input_html: { class:"mr-2"} %>


        <%= f.button :submit, "Envoyer", class:'py-2 w-full text-lg text-white font-bold bg-gray-900 rounded-full focus:outline-none' %>
      </div>
    <% end %>
  </div>
