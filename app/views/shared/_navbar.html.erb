          <span class="text-lg font-semibold text-gray-700 ">(<%= cart_count_over_one %>)</span>
        <% end %>
      <% end %>
    </div>

  </div>
  <div class="sticky">
    <%= current_user.nil? ? (render 'shared/menu_before_login') : (render 'shared/menu_after_login') %>
  </div>
</nav>

<nav class="hidden lg:contents">

  <div class="flex justify-between items-center py-3 px-4 shadow">
    <div class="flex items-baseline space-x-8 xl:space-x-14">
      <div>
        <%= link_to root_path do %>
          <div class="flex">
            <h2 class="text-gray-600 font-bold text-2xl xl:text-3xl">Mabcia</h2>
            <h2 class="text-japonica-500 font-bold text-2xl xl:text-3xl">Ceramic</h2>
