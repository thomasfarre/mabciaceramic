
<div class="px-2 pt-2">
  <div class="flex justify-between">
    <%= link_to "Continuer mes achats", items_path, class:'text-gray-500' %>
    <%= button_to 'Vider le panier', @cart, method: :delete, data: { confirm: "Etes-vous sur?" }, class:'bg-white text-gray-500' %>
  </div>
  <div class="pt-8">
    <span class="text-xl font-medium"><%= pluralize(cart_count_over_one, 'article') %> dans votre panier</span>
  </div>
  <div class="pt-6 flex justify-between">
    <span class="font-medium">Total(<%= pluralize(cart_count_over_one, 'article') %>)</span>
    <span class="font-medium"><%= @cart.total_price %>€</span>
  </div>
  <div class="pt-4">
    <%= form_tag orders_path do %>
    <%= hidden_field_tag 'cart_id', @cart.id %>
    <%= submit_tag 'Finaliser la commande', class:'w-full font-medium bg-black text-white py-3 rounded-3xl' %>
    <% end %>
  </div>

  <div class="pt-4 px-2 flex flex-col">
    <% @cart.cart_items.each do |cart_item| %>
      <div class="pt-8 flex space-x-6">
        <div class="flex flex-col justify-start ">
          <%= cl_image_tag cart_item.item.photos[0].key, class:'w-20 h-20 object-cover rounded-xl' %>
          <span class="pt-2 text-sm font-bold text-left"><%= cart_item.item.title %></span>
          <span class="pt-1 text-japonica-500 text-sm"><%= cart_item.item.category %></span>


        </div>
        <div class="text-justify pt-2">
          <span class="pt-4"><%= cart_item.item.description[0..180] %></span>

          <div class="flex justify-between pt-4">
            <span class="font-bold text-gray-500"><%= link_to 'Supprimer', cart_item, method: :delete, data:{ confirm: "are you sure?" } %></span>
            <span class="font-bold"> <%= cart_item.item.price %>€</span>


          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
















