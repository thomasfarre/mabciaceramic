<div class="pt-8 px-4">

  <%= render "shared/forms/form_header" %>


  <div class="pt-5 px-2">
    <h1 class="text-2xl text-gray-800 font-bold text-center">Adresse de livraison</h1>
    <div class="py-8 text-center max-w-xs mx-auto">
      <%= simple_form_for [current_user, @adress] do |f| %>
        <div class="space-y-2">

        <%= f.input :name,
                    required: false,
                    label: false,
                    placeholder: "Toto L'Asticot",
                    input_html: { class: "px-2 py-2 text-gray-700 border-2 border-gray-200 w-full rounded-lg focus:outline-none focus:border-japonica-300"} %>


        <%= f.input :street,
                    required: false,
                    autofocus: true,
                    label: false,
                    placeholder: '18 rue saint marcelin',
                    input_html: { class: "px-2 py-2 text-gray-700 border-2 border-gray-200 w-full rounded-lg focus:outline-none focus:border-japonica-300"} %>

        <%= f.input :street_detail,
                    required: false,
                    label: false,
                    placeholder: "Complément d'adresse",
                    input_html: { class: "px-2 py-2 text-gray-700 border-2 border-gray-200 w-full rounded-lg focus:outline-none focus:border-japonica-300"} %>

        <%= f.input :zipcode,
                    required: false,
                    label: false,
                    placeholder: "75000",
                    input_html: { class: "px-2 py-2 text-gray-700 border-2 border-gray-200 w-full rounded-lg focus:outline-none focus:border-japonica-300"} %>

        <%= f.input :city,
                    required: false,
                    label: false,
                    placeholder: "Paris",
                    input_html: { class: "px-2 py-2 text-gray-700 border-2 border-gray-200 w-full rounded-lg"} %>

        <%#= f.input :country,
                    collection: ['France(métropolitaine)'],
                    required: false,
                    label: false,
                    input_html: { class: "px-2 py-4 border-2 w-full rounded-lg"} %>

          <p class="pt-1 text-gray-500 italic text-sm text-left">Livraison exclusivement en France métropolitaine pour le moment</p>
          <div class="pt-1">
            <%= f.button :submit, "Valider", class:'w-full py-4 rounded-xl bg-gray-900 text-white font-bold text-lg focus:outline-none' %>
          </div>
        </div>
      <% end %>
  </div>
</div>
