<div class="px-4">
  <div class="px-2 pt-6">
    <%= link_to root_path do %>
    <button class="outline-none"><svg class="w-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg></button>
    <% end %>
  </div>

  <div class="pt-2 flex justify-center">
    <%= image_tag 'Logo.png', alt:'logo', class:'w-16 h-16 rounded-full' %>
  </div>

  <div class="pt-8">

    <h1 class="px-8 text-center text-3xl font-medium">Connecte toi à ton compte</h1>

    <div class="py-8 text-center">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="space-y-6">

        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label: false,
                    placeholder: 'Email*',
                    input_html: { class: "px-2 py-3 border-2 border-gray-200 w-full rounded-lg"} %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    label: false,
                    placeholder: 'Mot de passe*',
                    input_html: { class: "px-2 py-3 border-2 border-gray-200 w-full rounded-lg"} %>

        <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <div class="pt-4 text-right">
        <div class="pb-4">
          <%= render "devise/shared/links" %>
        </div>
        <%= f.button :submit, "Se connecter", class:"w-full py-4 rounded-xl bg-black text-white font-medium text-lg" %>
      </div>
    <% end %>
  </div>

  <div class="pt-2 flex justify-between items-center">
    <svg class="w-24 h-16" fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 89 1"><path stroke="#A09F9F" d="M0 .5h89"/></svg>
    <span class="text-sm text-center">Nouveau client ?</span>
    <svg class="w-24 h-16" fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 89 1"><path stroke="#A09F9F" d="M0 .5h89"/></svg>
  </div>
  <div class="flex justify-center">
    <%= link_to new_user_registration_path do %>
      <button class="px-6 py-4 rounded-xl text-gray-400 border-2 border-gray-200 font-medium hover:bg-gray-50 hover:text-japonica-500">Crée un compte</button>
    <% end %>
  </div>
</div>

