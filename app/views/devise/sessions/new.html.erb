<div class="px-2">

  <div class="px-6 pt-8 flex items-center justify-between">
    <div>
      <%= link_to root_path do %>
      <button class="outline-none"><svg class="w-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg></button>
      <% end %>
    </div>

    <div>
      <%= image_tag 'Logo.png', alt:'logo', class:'w-14 h-14 rounded-full' %>
    </div>

<!--    bricolage pour avoir le logo parfaitement centré -->
    <div class="invisible">
      <%= link_to root_path do %>
      <button class="outline-none"><svg class="w-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg></button>
      <% end %>
    </div>
  </div>

    <h1 class="px-8 pt-5 text-center text-2xl text-gray-800 font-bold">Me connecter</h1>

    <div class="py-14 max-w-xs mx-auto">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="space-y-4">

          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label: "Email addresse",
                      label_html: { class:"text-gray-600"},
                      input_html: { class: "px-2 py-2 border-2 border-gray-200 w-full rounded-lg"} %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      label: "Mot de passe",
                      label_html: { class:"text-gray-600 "},
                      input_html: { class: "px-2 py-2 border-2 border-gray-200 w-full rounded-lg"} %>


          <div class="pt-2 text-right">
            <div class="pb-4 flex justify-between items-center">
              <%= f.input :remember_me,
                          label: "Connexion-auto",
                          label_html: { class:"text-gray-600 flex items-center"},
                          input_html: { class:"mr-2"},
                          as: :boolean if devise_mapping.rememberable? %>
              <%= render "devise/shared/links" %>
            </div>
            <%= f.button :submit, "Se connecter", class:"w-full py-4 rounded-xl bg-gray-900 text-white font-medium text-lg" %>
          </div>
        </div>
      <% end %>

      <div class="pt-2 flex justify-between items-center">
        <svg class="w-20 h-16" fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 89 1"><path stroke="#A09F9F" d="M0 .5h89"/></svg>
        <span class="text-sm text-center text-gray-700">Nouveau client ?</span>
        <svg class="w-20 h-16" fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 89 1"><path stroke="#A09F9F" d="M0 .5h89"/></svg>
      </div>
      <div class="flex justify-center">
        <%= link_to new_user_registration_path do %>
          <button class="px-6 py-4 rounded-xl text-gray-400 border-2 border-gray-200 font-medium hover:bg-gray-50 hover:text-japonica-500">Crée un compte</button>
        <% end %>
      </div>
    </div>

